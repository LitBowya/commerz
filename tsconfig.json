{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@commerz/*": ["./packages/@commerz/*/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "build", ".next"],
  "references": [
    { "path": "./frontend" },
    { "path": "./backend" }
  ]
}
